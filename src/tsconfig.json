{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/ts/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "resources/ts/**/*.ts",
    "resources/ts/**/*.d.ts",
    "resources/ts/**/*.vue"
  ]
}
